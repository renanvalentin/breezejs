<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>MCOM</title>
    <link href="@Url.Content("~/Content/normalize.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/bundle/less")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="main">
        <div class="modal-wrapp step1">
            <button class="modal-close-button">
                x</button>
            <div class="modal-content">
                <div class="form" id="step1">
                    <h1>New User</h1>
                    <div class="row">
                        <label>
                            PIN</label>
                        <input type="text" placeholder="__.___.___/____-__" pattern="0-9" required="true" class="ipt-250px" />
                        <input type="button" value="ok" class="button-ok">
                    </div>
                </div>
                <div class="form" id="step2">
                    <h1>New User</h1>
                    <div class="form-group">
                        <div class="form-row">
                            <label>
                                EIN:</label>
                            <span class="disable-text">13.222.222/0001-51</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <label class="without-input">
                                * required fields.</label>
                        </div>
                        <div class="form-row">
                            <label>
                                Company name*:</label>
                            <input type="text" placeholder="My Company" />
                        </div>
                        <div class="form-row">
                            <label>
                                Street name*:</label>
                            <input type="text" placeholder="Broad St" />
                        </div>
                        <div class="form-row">
                            <label>
                                Number*:</label>
                            <input type="text" placeholder="55" class="w50" />
                            <label class="w70">
                                Suite/Apt*:</label>
                            <input type="text" placeholder="11C" class="w160" />
                        </div>
                        <div class="form-row">
                            <label>
                                City*:</label>
                            <input type="text" placeholder="New York" />
                        </div>
                        <div class="form-row">
                            <label>
                                State*:</label>
                            <input type="text" placeholder="NY" />
                        </div>
                        <div class="form-row">
                            <label>
                                Zipcode*:</label>
                            <input type="number" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <label>
                                Main Contact*:</label>
                            <input type="text" placeholder="Anderson Silva" />
                        </div>
                        <div class="form-row">
                            <label>
                                Position*:</label>
                            <input type="text" placeholder="Seller" />
                        </div>
                        <div class="form-row">
                            <label>
                                E-mail*:</label>
                            <input type="email" placeholder="renan.valentin@outlook.com" />
                        </div>
                        <div class="form-row">
                            <label>
                                Confirm E-mail*:</label>
                            <input type="email" placeholder="renan.valentin@outlook.com" />
                        </div>
                        <div class="form-row">
                            <label>
                                Password*:</label>
                            <input type="password" placeholder="****" />
                        </div>
                        <div class="form-row">
                            <label>
                                Phone*:</label>
                            <input type="tel" placeholder="17 9999 9999" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row with-checkbox">
                            <input type="checkbox" />
                            <label>
                                I want to receive <b>Promotions</b> by email.</label>
                        </div>
                        <div class="form-row with-checkbox">
                            <input type="checkbox" />
                            <label>
                                <b>I want to be called by a specialist.</b></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <input type="button" value="SEND" class="form-submit" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/jqueryval"
    )
</body>
</html>
